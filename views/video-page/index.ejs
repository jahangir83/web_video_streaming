<%- include ("../layouts/header")%>

    <div class="container my-4">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="mt-4">
                    <%= video.title %>
                </h1>

                <p class="lead">
                    by <%= video.users.name%>
                </p>

                <hr>

                <p>
                    Postted on

                    <%
                        var createAt = new Date(video.createAt);
                        var date = createAt.getDate() + "";
                    %>

                    <%= date.padStart(2, "0") + " " + moonts[createAt.getMonth()] + "," + createAt.getFullYear() %>
                </p>

                <hr>

                <input type="hidden" id="videoId" value="<%= video._id %>">
                <input type="hidden" id="category" value="<%= video.category %>">

                <video id="videoPlayer" controls style="width: 100%" poster="<%= baseUrl + video.thumbnail %>" src="<%= baseUrl + video.filePath %>">
                    
                </video>

                <div class="row">
                    <div class="col-md-4">
                        <p class="col-mb-0">
                            <i class="fa fas-eye"></i>
                            <%= video.views %> views
                        </p>
                    </div>
                </div>
                
                <hr>

                <p class="text-center">
                    <b>Category</b>
                    <%= video.category %>
                </p>

                <hr>

                <p class="lead">
                    <%= video.description %>
                </p>
                

            </div>
        </div>
    </div>
<%- include ("../layouts/footer")%>